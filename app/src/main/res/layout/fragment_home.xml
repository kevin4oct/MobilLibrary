<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/title_home"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_marginLeftPercent="4%" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <!--轮播图-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_carousel_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/title_home"
        app:layout_heightPercent="25%" />

    <!--轮播图导航条小圆点-->
    <com.hebth.mobilelibrary.myview.NavigationDotBar
        android:id="@+id/navigation_home"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/vp_carousel_home" />

    <!--按钮功能区-->
    <LinearLayout
        android:id="@+id/functionarea_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/vp_carousel_home"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        app:layout_heightPercent="26%"
        app:layout_widthPercent="90%">

        <!--第一行按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--馆藏查询-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_search_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_search_home"
                    app:layout_heightPercent="60%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="馆藏查询"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--新书推荐-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_recommend_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_recommend_home"
                    app:layout_heightPercent="60%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="新书推荐"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--借阅排行-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_borrowlist_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_borrowlist_home"
                    app:layout_heightPercent="60%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="借阅排行"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--扫一扫-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_rq_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_rq_home"
                    app:layout_heightPercent="60%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="扫一扫"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>
        </LinearLayout>

        <!--第二行按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--读者信息-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_readerinfo_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_readerinfo_home"
                    app:layout_heightPercent="60%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="读者信息"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--我的书架-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_shelf_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_shelf_home"
                    app:layout_heightPercent="60%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="我的书架"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--正在借阅-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_borrowing_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_borrowing_home"
                    app:layout_heightPercent="60%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="正在借阅"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--历史借阅-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/btn_history_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_history_home"
                    app:layout_heightPercent="60%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="历史借阅"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--导航条-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_vp_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/functionarea_home"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_tab_opac"
        app:layout_heightPercent="7%"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@color/bg_orange" />

    <!--新闻viewpager-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_vp_home"/>

</com.zhy.android.percent.support.PercentRelativeLayout>