<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/library"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_marginLeftPercent="4%" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <!--按钮区-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="86%"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="12%">

        <!--本馆简介-->
        <ImageView
            android:id="@+id/iv_abstract_library"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_abstract_library" />

        <!--办证指南-->
        <ImageView
            android:id="@+id/iv_guide_library"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_guide_library" />

    </LinearLayout>

    <!--按钮区-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="86%"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="3%">

        <!--读者须知-->
        <ImageView
            android:id="@+id/iv_notice_library"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_notice_library" />

        <!--开馆时间-->
        <ImageView
            android:id="@+id/iv_time_library"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_time_library" />

    </LinearLayout>

    <!--地图区-->
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_heightPercent="45%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="86%">

        <com.amap.api.maps2d.MapView
            android:id="@+id/map_library"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/iv_location_library"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="10dp"
            android:src="@mipmap/icon_location"/>
    </android.support.v7.widget.CardView>


</com.zhy.android.percent.support.PercentLinearLayout>